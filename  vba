Sub ZmienKolorWszystkichSlowaZTablicyRozneKolory()
    Dim zakres As Range
    Dim komorka As Range
    Dim szukaneSlowa() As Variant
    Dim kolory() As Long
    Dim i As Integer
    Dim start As Integer
    Dim pozycja As Integer
    Dim dlugosc As Integer

    ' Ustaw tablicę szukanych słów
    szukaneSlowa = Array("test", "przykład", "Excel", "VBA") ' <-- tutaj wpisz swoje słowa

    ' Ustaw tablicę kolorów (RGB: Red, Green, Blue)
    kolory = Array(RGB(255, 0, 0),    ' Czerwony
                   RGB(0, 128, 0),    ' Zielony
                   RGB(0, 0, 255),    ' Niebieski
                   RGB(255, 0, 255))  ' Magenta

    ' Ustaw zakres (np. A1:D10)
    Set zakres = Range("A1:D10") ' <-- zmień zakres według potrzeb

    For Each komorka In zakres
        If Not komorka.Value = "" Then
            For i = LBound(szukaneSlowa) To UBound(szukaneSlowa)
                If i <= UBound(kolory) Then ' Zabezpieczenie, żeby nie wyjść poza zakres kolorów
                    dlugosc = Len(szukaneSlowa(i))
                    start = 1
                    pozycja = InStr(start, komorka.Value, szukaneSlowa(i), vbTextCompare)
                    Do While pozycja > 0
                        komorka.Characters(pozycja, dlugosc).Font.Color = kolory(i)
                        start = pozycja + dlugosc
                        pozycja = InStr(start, komorka.Value, szukaneSlowa(i), vbTextCompare)
                    Loop
                End If
            Next i
        End If
    Next komorka
End Sub
